@model IEnumerable<DemoRobot.Models.tarea>

@{
    ViewBag.Title = "Index";
}

<h2>Tareas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_tarea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.robot.nombre_robot)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_tarea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.robot.nombre_robot)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_tarea }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_tarea }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_tarea })
            </td>
        </tr>
    }

</table>
