@model DemoRobot.Models.robot

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>robot</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nombre del Robot</label>
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre_robot, new { htmlAttributes = new { @class = "form-control" } })
